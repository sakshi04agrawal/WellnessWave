<% layout('/layouts/boilerplate') %>
    <style>
        body {
            background-image: url("https://res.cloudinary.com/dfxbpcwoq/image/upload/v1717828768/versevista/kn7qbzhsxsvrbqemgy1f.jpg");
            background-size: cover;
            background-position: center;
            text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
            box-shadow: inset 0 0 5rem rgba(0, 0, 0, 0.5);
        }

        .card {
            background-color: rgba(255, 255, 255, 0.8);
            /* Set the desired opacity value here */
        }
    </style>

    <h1 class="text-center">Welcome Back "<%= currentUser.username %>"!!
    </h1>
    <h3 class="text-center">Blogs You have Commented:</h3>
    <ul>
        <% for(let blog of blogs){%>
            <% for(let comment of blog.comments){ %>
                <% if(comment.author.equals(currentUser._id)){ %>
                    <div class="card mb-3 text-center">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <a href="/blogs/<%= blog._id%>">
                                    <img src="<%= blog.logo[0].url  %>" class="img-fluid " alt="...">
                                </a>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h3 class="card-title">
                                        <%= blog.title %>
                                    </h3>
                                    <h6 class="card-subtitle mb-2 text-body-secondary">
                                        <%= blog.shortdescription %>
                                    </h6>
                                    <h6>Published by: <b>
                                            <%= blog.author.username %>
                                        </b></h6>
                                    <% if(blog.likes.length) {%>
                                        <h6>Likes: <b>
                                                <%= blog.likes.length %>
                                            </b></h6>
                                        <% } %>
                                            <% if(blog.dislikes.length) {%>
                                                <h6>Dislikes:
                                                    <b>
                                                        <%= blog.dislikes.length %>
                                                    </b>
                                                </h6>
                                                <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>



                        <% } %>
                            <% } %>

    </ul>