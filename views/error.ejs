<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h3 class="alert-heading">ERROR!!!!</h3>
                <hr>
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <div>
                    <% if (process.env.NODE_ENV !=="production" ) {%>
                        <p>
                            <%=err.stack %>
                        </p>
                        <% } %>
                </div>
            </div>
        </div>
    </div>